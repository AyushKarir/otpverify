generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Otp {
  id          String   @id @default(cuid())
  phoneNumber String
  otp         String
  createdAt   DateTime @default(now())
}

model User {
  id         String  @id @default(cuid())
  name       String
  phone      String
  district   String
  state      String
  pincode    String
  isVerified Boolean
}
